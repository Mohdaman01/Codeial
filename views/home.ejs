 <head>
    <link rel="stylesheet" href="/css/home.css">
 </head>
<h1>Codeial home page</h1>
<div id="home-container">
    <div class="create-post">
        <%if(locals.user){%>
        <form action="/posts/create" method="post" id="post-form">
            <textarea name="content" id="text-content" cols="50" rows="6" placeholder="Write text here" required></textarea>
            <br>
            <input type="submit" value="Post"/>
        </form>
        <%}%>
        <br>
        <div id="post-list-container">
            <ul>
                <%for(post of posts){%> 
                <%-include('_posts')-%>
                <%}%>
            </ul>
        </div> 
    </div>
 

    <div class="users-container">
        <h1>Users List</h1>
        <ul>
            <%for(user of all_Users){%>
                <li><a href="/users/profile/<%=user.id%>"><%=user.name%></a></li>
            <%}%>
        </ul>
    </div> 
</div>

<script src="/js/home_post_comments.js"></script>
<script src="/js/home_post.js"></script>
<script src="/js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    })
</script>


