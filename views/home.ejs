 <head>
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/chat_box.css">
 </head>
<h1>Codeial home page</h1>
<div id="home-container">
    <div class="create-post">
        <%if(locals.user){%>
        <form action="/posts/create" method="post" id="post-form">
            <textarea name="content" id="text-content" cols="50" rows="6" placeholder="Write text here" required></textarea>
            <br>
            <input type="submit" value="Post"/>
        </form>
        <%}%>
        <br>
        <div id="post-list-container">
            <ul>
                <%for(post of posts){%> 
                <%-include('_posts')-%>
                <%}%>
            </ul>
        </div> 
    </div>
 

    <div class="users-container">
        <h1>Users List</h1>
        <ul>
            <%for(user of all_Users){%>
                <li><a href="/users/profile/<%=user.id%>"><%=user.name%></a></li>
            <%}%>
        </ul>
    </div> 
    <%-include('_chat_box')-%>
</div>

<script src="/js/home_post_comments.js"></script>
<script src="/js/home_post.js"></script>
<script src="/js/toggle_likes.js"></script>
<script>
    $('.toggle-like-button').each(function(){
        let self = this;
        let toggleLike = new ToggleLike(self);
    })
</script>
    
<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.6.1/socket.io.js" integrity="sha512-xbQU0+iHqhVt7VIXi6vBJKPh3IQBF5B84sSHdjKiSccyX/1ZI7Vnkt2/8y8uruj63/DVmCxfUNohPNruthTEQA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/js/chat_engine.js"></script>

<%if(locals.user) {%>
    <script>
        new chatEngine('user-chat-box','<%= locals.user.email%>')
    </script>
<%}%>


