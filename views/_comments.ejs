<li id="comment-<%= comment._id %>">
    <p>
        <%if((locals.user && locals.user.id == comment.user.id)||locals.user && locals.user.id == post.user.id){%>
        <small>
            <a href="/comments/destroy/<%=comment.id%>" class="delete-comment-button"><i class="fa-solid fa-circle-xmark"></i></a>
        </small>
        <%}%>
        <%=comment.content%>
        <br>
        <small>
            <%=comment.user.name%>
        </small>
        <small>
            <%if(locals.user){%>
                <a href="/likes/toggle/?id=<%=comment._id%>&type=comment" class="toggle-like-button" data-likes="<%= comment.likes.length %>"><%=comment.likes.length%> <i class="fa-solid fa-thumbs-up"></i></a>
            <%}else{%>
                <%=comment.likes.length%> Likes
            <%}%>  
        </small>
    </p> 
</li>