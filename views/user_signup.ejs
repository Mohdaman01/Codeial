<head>
    <link rel="stylesheet" href="/css/user_signup.css">
</head>

<div class="signup-container">

    <h1>Sign Up</h1>

    <form action="/users/create" method="post" class="signup-form">
        <input type="text" name="name" placeholder="name" required/>
        <br>
        <input type="email" name="email" placeholder="email" required/>
        <br>
        <input type="password" name="passward" placeholder="passward" required/>
        <br>
        <input type="password" name="confirm_password" placeholder="confirm password" required/>
        <br>
        <input type="submit" value="Sign Up">
    </form>

    <p class="google-login">
        <a href="/users/auth/google">Google Sign In/Sign Up <i class="fa-brands fa-google"></i></a>
    </p> 

